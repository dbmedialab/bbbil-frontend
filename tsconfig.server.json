{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", 
    "**/*.d.ts",
    "server/**/*"
  ]
}
